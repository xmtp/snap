{
  "name": "@xmtp/snap",
  "version": "0.2.1",
  "description": "Snap keystore implementation for XMTP",
  "repository": {
    "type": "git",
    "url": "https://github.com/xmtp/snap.git"
  },
  "license": "MIT",
  "main": "dist/bundle.js",
  "files": [
    "dist/",
    "images/",
    "snap.manifest.json"
  ],
  "scripts": {
    "build": "mm-snap build --transpilationMode=localAndDeps",
    "build:clean": "npm run clean && npm run build",
    "build:website": "node ./scripts/build-website.js",
    "clean": "rimraf dist",
    "lint": "npm run lint:eslint && npm run lint:misc --check",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:fix": "npm run lint:eslint -- --fix && npm run lint:misc -- --write",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!CHANGELOG.md' --ignore-path .gitignore",
    "prepublishOnly": "npm run build:clean",
    "serve": "mm-snap serve",
    "start": "mm-snap watch --transpilationMode=localAndDeps",
    "pretest": "npm run build",
    "test": "jest"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      }
    ]
  },
  "dependencies": {
    "@xmtp/proto": "^3.34.0",
    "@xmtp/xmtp-js": "^11.3.0-beta.13",
    "async-mutex": "^0.4.0",
    "buffer": "^6.0.3",
    "protobufjs": "^7.2.4"
  },
  "devDependencies": {
    "@lavamoat/allow-scripts": "^2.0.3",
    "@metamask/eslint-config": "^12.2.0",
    "@metamask/eslint-config-jest": "^12.1.0",
    "@metamask/eslint-config-nodejs": "^12.1.0",
    "@metamask/eslint-config-typescript": "^12.1.0",
    "@metamask/snaps-cli": "^4.0.0",
    "@metamask/snaps-jest": "^4.0.1",
    "@metamask/snaps-sdk": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jsdoc": "^43.0.7",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^6.6.2",
    "jest": "^29.6.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  }
}
