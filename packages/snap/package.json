{
  "name": "@xmtp/snap",
  "version": "1.3.0",
  "description": "Snap keystore implementation for XMTP",
  "repository": {
    "type": "git",
    "url": "https://github.com/xmtp/snap.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/bundle.js",
  "files": [
    "dist/",
    "images/",
    "snap.manifest.json"
  ],
  "scripts": {
    "build": "mm-snap build --transpilationMode=localAndDeps",
    "build:clean": "yarn clean:dist && yarn build",
    "build:website": "node ./scripts/build-website.js",
    "clean": "rm -rf .turbo && rm -rf node_modules && yarn clean:dist",
    "clean:dist": "rm -rf dist",
    "format": "yarn format:base -w .",
    "format:base": "prettier --ignore-path ../../.gitignore",
    "format:check": "yarn format:base -c .",
    "lint": "eslint . --ignore-path ../../.gitignore",
    "prepublishOnly": "yarn build:clean",
    "serve": "mm-snap serve",
    "start": "mm-snap watch --transpilationMode=localAndDeps",
    "test": "yarn build && jest --runInBand",
    "typecheck": "tsc"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      }
    ]
  },
  "dependencies": {
    "@xmtp/proto": "^3.34.0",
    "@xmtp/xmtp-js": "^11.3.0-beta.13",
    "async-mutex": "^0.4.0",
    "buffer": "^6.0.3",
    "protobufjs": "^7.2.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@lavamoat/allow-scripts": "^2.0.3",
    "@metamask/snaps-cli": "^4.0.1",
    "@metamask/snaps-jest": "^4.0.1",
    "@metamask/snaps-rollup-plugin": "^3.0.1",
    "@metamask/snaps-sdk": "^1.4.0",
    "eslint": "^8.56.0",
    "eslint-config-custom": "workspace:*",
    "ethers": "^6.6.2",
    "jest": "^29.6.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  }
}
